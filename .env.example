# ============================================================================
# .env.example
# ============================================================================
# Application Settings
APP_NAME=Enterprise Agentic AI System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=enterprise_ai
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=enterprise_ai_db

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Vector Database Settings
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_COLLECTION=documents

# Custom LLM Settings (Your in-house LLM)
CUSTOM_LLM_ENDPOINT=https://your-llm-api.company.com
CUSTOM_LLM_API_KEY=your-custom-llm-api-key
CUSTOM_LLM_MODEL=your-custom-model-name
CUSTOM_LLM_MAX_TOKENS=4096

# Azure OpenAI Settings (Fallback)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Search Settings
SEARCH_API_KEY=your-google-search-api-key
SEARCH_ENGINE_ID=your-google-search-engine-id
SEARCH_RESULTS_LIMIT=10

# JIRA Settings
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/enterprise-ai/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=200

# File Processing
MAX_FILE_SIZE_MB=100

# Monitoring and Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_TRACING=true