# ============================================================================
# Environment Configuration Example
# ============================================================================
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="Enterprise Agentic AI System"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security Settings
SECRET_KEY=your-secret-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256
ENABLE_HTTPS=false

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=agentic_ai
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=agentic_ai_db
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Vector Database Settings
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_COLLECTION=documents

# Custom LLM Settings
CUSTOM_LLM_ENDPOINT=http://localhost:11434
CUSTOM_LLM_API_KEY=
CUSTOM_LLM_MODEL=llama2
CUSTOM_LLM_MAX_TOKENS=4096
CUSTOM_LLM_TIMEOUT=60
CUSTOM_LLM_MAX_RETRIES=3

# Azure OpenAI Settings (fallback)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Search Settings
SEARCH_API_KEY=your-google-search-api-key
SEARCH_ENGINE_ID=your-google-search-engine-id
SEARCH_RESULTS_LIMIT=10
SEARCH_TIMEOUT=30

# JIRA Settings
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=YOUR_PROJECT
JIRA_TIMEOUT=30

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_PATH=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=200

# File Processing
MAX_FILE_SIZE_MB=100
SUPPORTED_FILE_TYPES=[".pdf", ".docx", ".txt", ".json", ".xml", ".csv"]

# Monitoring and Observability
JAEGER_ENDPOINT=
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
ENABLE_TRACING=true
